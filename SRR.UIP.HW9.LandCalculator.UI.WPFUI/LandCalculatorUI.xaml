<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SRR.UIP.HW9.LandCalculator.UI.WPFUI"
             xmlns:CustomControls="clr-namespace:SRR.UIP.HW9.LandCalculator.UI.WPFUI.CustomControls" x:Class="SRR.UIP.HW9.LandCalculator.UI.WPFUI.LandCalculatorUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel x:Name="PointInputsCollection">
            <CustomControls:PointInput/>
        </StackPanel>
        <Button  HorizontalAlignment="Left" 
                 Width="100" 
                 Margin="40,2"
                 Content="Add point"
                 Click="AddPointClick"/>
        <Button  HorizontalAlignment="Center"
                 Width="100" 
                 Margin="40,2"
                 Content="Calculate"
                 Click="CalculateClick"/>
        
    </StackPanel>
</UserControl>
