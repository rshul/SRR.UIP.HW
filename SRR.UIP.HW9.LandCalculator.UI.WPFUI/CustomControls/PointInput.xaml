<UserControl x:Class="SRR.UIP.HW9.LandCalculator.UI.WPFUI.CustomControls.PointInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SRR.UIP.HW9.LandCalculator.UI.WPFUI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <Label Margin="5,0"
               Content="X" />
        <TextBox x:Name="X"
                 MinWidth="50"
                 Padding="10,3"
                 TextChanged="TextChangedInInputPoint"/>
        <Label Margin="5,0"
               Content="Y"/>
        <TextBox MinWidth="50"
                 Padding="10,3"
                 x:Name="Y"
                 TextChanged="TextChangedInInputPoint"/>
        <Button Click="DeleteInputPoint_Click">Delete</Button>
        <TextBlock Foreground="Red"
                   x:Name="ValidationBlock"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"
                   Margin="5,0">hello</TextBlock>
    </StackPanel>
</UserControl>
